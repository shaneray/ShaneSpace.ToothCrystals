@model ToothCrystal.Classes.Inventory.InventoryItem

@{
    ViewBag.Title = "Delete";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Delete Inventory Item
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="well well-sm">
                    @Html.ActionLink("Back to List", "Index", null, new { @Class = "btn btn-default" })
                </div>
            </div>

        </div>
        <h2 class="alert alert-danger">Are you sure you want to delete this Item?</h2>
        <div class="row">
            <div class="col-md-12">
                <h3>Item Details</h3>
                <div class="col-md-2">
                    <img style="max-height: 100px;" src="@(!string.IsNullOrWhiteSpace(Model.ImageExtension) ? ToothCrystal.Areas.Admin.Controllers.InventoryController.GetImageFile(Model.Id + Model.ImageExtension) : ToothCrystal.Areas.Admin.Controllers.InventoryController.GetImageFile(Model.Id))" />
                </div>
                <div class="col-md-10">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.ProductCode)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProductCode)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.MyCode)
                        </dt>

                        <dd>
                            @if (Model.MyCode != 0)
                            {
                                Html.DisplayFor(modelItem => Model.MyCode);
                            }
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.QtyInStock)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.QtyInStock)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Color)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Color)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                    </dl>
                </div>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <input type="submit" value="Delete Item" class="btn btn-default" />

                }
            </div>

        </div>

    </div>
</div>